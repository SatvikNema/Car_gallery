<% include ./partials/header %> 
<div class="container">
	<h2>This is the car you chose:<%=model.name%></h2>
	<div class="thumbnail">
    	<img src="<%=model.img%>">
	</div>
	<h3>The comments made on this model are:</h3>
	<div class="well">
		<%for(var i=0;i<model.comments.length;i++){%>
			<div class="row"> 
				<div class="col-md-12">
					<strong class="commentText"><em><%= model.comments[i].author.username %></em></strong>
					<%const d = model.comments[i].date %>
					<%const date = d.toString().substring(4,25)%>
					<%const month = date.substring(0,3), day = date.substring(4,6), year = date.substring(7,11), time = date.substring(12,) %>

					<!--  date.toString().substring(4,25)-->
					<span class="pull-right commentText"><em><%= (day + " " + month + ", " + year)+" - "+time %></em></span>
					<p class="commentText">
						<%= model.comments[i].text %> 
					</p>
					<% if(currentUser && model.comments[i].author.id.equals(currentUser._id)){ %>
						<div id="bottom">
						<a href="/model_select/<%=model._id%>/addcomment/<%=model.comments[i]._id%>/edit"><button class="btn btn-xs btn-warning">Edit</button></a>

						<form action="/model_select/<%=model._id%>/addcomment/<%=model.comments[	i]._id%>?_method=DELETE" method="POST" id="delete-form">
							<button class="btn btn-xs btn-danger" id="delete-form">Delete</button>
						</form>
						</div>
					<% } %>
				</div>
			</div>
		<%}%>
	</div>
	<h3><strong><a href="/model_select/<%=model._id%>/addcomment">ADD COMMENT</a></strong></h3>

</div>